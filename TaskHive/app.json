{
  "expo": {
    "name": "",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/taskhive-splash-screen.jpg",
    "scheme": "mobileappdev53",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./assets/images/taskhive-splash-screen.jpg",
        "backgroundColor": "#f4f6f8",
        "resizeMode": "contain"
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select a background image."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/taskhive-splash-screen.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "splash": {
        "image": "./assets/images/taskhive-splash-screen.jpg",
        "imageWidth": 200,
        "backgroundColor": "#f4f6f8",
        "resizeMode": "contain"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/taskhive-splash-screen.jpg"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/taskhive-splash-screen.jpg",
          "backgroundColor": "#f4f6f8",
          "resizeMode": "contain"
        }
      ],
      "expo-image-picker" 
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}